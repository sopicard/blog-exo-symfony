{%  extends "base.html.twig" %}

{% block main %}

    {# ici la fonction twig form permet de créer tous les inputs et labels de mon formulaire #}
    {# {{ form(form) }} #}
    {# je redécoupe mon formulaire pour mise en forme + esthétique avec bootstrap  #}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-category-title-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.color, 'Couleur', {'label_attr': {'class': 'form-category-color-label'}}) }}
            {{ form_widget(form.color, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-category-description-label'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
    {{ form_label(form.isPublished,'Est publié', {'label_attr': {'class': 'form-isPublished-label' }}) }}
    {{ form_widget(form.isPublished, {'attr': {'class': 'form-control'}}) }}
        </div>

    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_end(form) }}

{% endblock %}